<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/controlCentralaTitle"
        android:layout_width="217dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="11dp"
        android:text="Setare parametrii"
        android:textAlignment="center"
        android:textColorLink="#FF5722"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/getTempTxtView"
        android:layout_width="41dp"
        android:layout_height="23dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBarTemperatura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/controlCentralaTitle"
        app:layout_constraintVertical_bias="0.675" />

    <Button
        android:id="@+id/centralaBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="6dp"
        android:text="ACASA"
        app:layout_constraintEnd_toStartOf="@+id/controlCentralaTitle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editTextText"
        android:layout_width="203dp"
        android:layout_height="24dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="text"
        android:text="Temperatura"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/getTempTxtView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/controlCentralaTitle"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/sendCentralaButton"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="20dp"
        android:text="Actualizati"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dateCrtBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarUmid" />

    <TextView
        android:id="@+id/getTimeTxtView"
        android:layout_width="93dp"
        android:layout_height="23dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText5" />

    <TextView
        android:id="@+id/editTextText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:inputType="text"
        android:text="Timpul"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/getTimeTxtView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarTemperatura" />

    <SeekBar
        android:id="@+id/seekBarTemperatura"
        android:layout_width="264dp"
        android:layout_height="18dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="24dp"
        android:max="32"
        android:min="15"
        android:progress="19"
        app:layout_constraintBottom_toTopOf="@+id/editTextText5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getTempTxtView" />

    <SeekBar
        android:id="@+id/seekBarTimp"
        android:layout_width="247dp"
        android:layout_height="14dp"
        android:max="20"
        android:min="1"
        android:progress="4"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getTimeTxtView"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="124dp"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        android:text="Umiditatea"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/UmidityTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarTimp"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/UmidityTxt"
        android:layout_width="56dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBarUmid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.5" />

    <SeekBar
        android:id="@+id/seekBarUmid"
        android:layout_width="265dp"
        android:layout_height="29dp"
        android:max="100"
        android:min="0"
        android:progress="20"
        app:layout_constraintBottom_toTopOf="@+id/sendCentralaButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UmidityTxt"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/dateCrtBtn"
        android:layout_width="114dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="33dp"
        android:text="Date curente"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sendCentralaButton"
        app:layout_constraintTop_toBottomOf="@+id/seekBarUmid" />
</androidx.constraintlayout.widget.ConstraintLayout>