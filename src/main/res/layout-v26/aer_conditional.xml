<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonAcasa"
        android:layout_width="111dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="55dp"
        android:text="ACASA"
        app:layout_constraintBottom_toTopOf="@+id/textView19"
        app:layout_constraintEnd_toStartOf="@+id/textView18"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="56dp"
        android:text="Temperatura si intensitatea aerului conditionat"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textView19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonAcasa"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonDown"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="118dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewWind"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonUp"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <ImageButton
        android:id="@+id/imageButtonUp"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="95dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonDown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.702"
        app:layout_constraintStart_toEndOf="@+id/textViewWind"
        app:layout_constraintTop_toBottomOf="@+id/seekBarClima"
        app:srcCompat="@android:drawable/arrow_up_float" />

    <SeekBar
        android:id="@+id/seekBarClima"
        android:layout_width="391dp"
        android:layout_height="20dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="19dp"
        android:max="25"
        android:min="14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAC" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="22dp"
        android:text="Temperatura"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/seekBarClima"
        app:layout_constraintEnd_toStartOf="@+id/textViewAC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAcasa" />

    <TextView
        android:id="@+id/textViewAC"
        android:layout_width="75dp"
        android:layout_height="47dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="30dp"
        android:text="18"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/seekBarClima"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="409dp"
        android:layout_height="60dp"
        android:text="ACTUALIZATI"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="143dp"
        android:layout_height="42dp"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="15dp"
        android:text="Puterea aerului"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarClima" />

    <TextView
        android:id="@+id/textViewWind"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="146dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSend"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonDown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="111dp"
        android:layout_height="41dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="24dp"
        android:text="Temperatura curenta"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/buttonSend"
        app:layout_constraintEnd_toStartOf="@+id/textViewCrtTemp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWind" />

    <TextView
        android:id="@+id/textViewCrtTemp"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="20dp"
        android:text="22"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSend"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonRefresh"
        app:layout_constraintStart_toEndOf="@+id/textView23"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonDown" />

    <ImageButton
        android:id="@+id/imageButtonRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCrtTemp"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonDown"
        app:srcCompat="@android:drawable/ic_popup_sync" />

</androidx.constraintlayout.widget.ConstraintLayout>